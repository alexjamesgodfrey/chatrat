import Layout from '../layouts/Layout.astro';
---

<Layout title="Terms of Service - Chatrat" description="Terms of service for Chatrat VSCode extension">
	<!-- Navigation -->
	<nav class="nav">
		<div class="container">
			<div class="nav-content">
				<div class="nav-brand">
					<a href="/"><h2>Chatrat</h2></a>
				</div>
				<div class="nav-links">
					<a href="/">Home</a>
					<a href="/#features">Features</a>
					<a href="/#how-it-works">How it Works</a>
					<a href="/privacy">Privacy</a>
				</div>
			</div>
		</div>
	</nav>

