</Layout>

<style>
	/* Navigation */
	.nav {
		background: var(--color-white);
		border-bottom: 1px solid var(--color-gray-200);
		position: sticky;
		top: 0;
		z-index: 50;
	}

	.nav-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 0;
	}

	.nav-brand a {
		text-decoration: none;
	}

	.nav-brand h2 {
		color: var(--color-primary);
		font-size: 1.5rem;
		font-weight: 700;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.nav-links a {
		font-weight: 500;
		color: var(--color-text);
		transition: color 0.2s ease;
	}

	.nav-links a:hover {
		color: var(--color-primary);
	}

	/* Legal Page */
	.legal-page {
		padding: 4rem 0;
		background: var(--color-background);
		min-height: 70vh;
	}

	.legal-content {
		max-width: 800px;
		margin: 0 auto;
		background: var(--color-white);
		padding: 3rem;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-md);
	}

	.legal-content h1 {
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 0.5rem;
	}

	.last-updated {
		color: var(--color-text-light);
		margin-bottom: 2rem;
		font-style: italic;
	}

	.legal-content section {
		margin-bottom: 2rem;
	}

	.legal-content h2 {
		font-size: 1.5rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		border-bottom: 2px solid var(--color-primary);
		padding-bottom: 0.5rem;
	}

	.legal-content p {
		margin-bottom: 1rem;
		line-height: 1.6;
		color: var(--color-text);
	}

	.legal-content ul {
		margin-bottom: 1rem;
		padding-left: 1.5rem;
	}

	.legal-content li {
		margin-bottom: 0.5rem;
		line-height: 1.6;
		color: var(--color-text);
	}

	.legal-content a {
		color: var(--color-primary);
		text-decoration: underline;
	}

	.legal-content a:hover {
		color: var(--color-primary-dark);
	}

	/* Footer */
	.footer {
		background: var(--color-gray-900);
		color: var(--color-white);
		padding: 3rem 0 1rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 3rem;
		margin-bottom: 2rem;
	}

	.footer-brand h3 {
		color: var(--color-primary);
		margin-bottom: 0.5rem;
	}

	.footer-brand p {
		color: var(--color-gray-200);
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 2rem;
	}

	.footer-section h4 {
		margin-bottom: 1rem;
		color: var(--color-white);
	}

	.footer-section a {
		display: block;
		color: var(--color-gray-200);
		margin-bottom: 0.5rem;
		transition: color 0.2s ease;
		text-decoration: none;
	}

	.footer-section a:hover {
		color: var(--color-primary);
	}

	.footer-bottom {
		border-top: 1px solid var(--color-gray-800);
		padding-top: 1rem;
		text-align: center;
		color: var(--color-gray-200);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}

		.legal-content {
			padding: 2rem 1rem;
			margin: 0 1rem;
		}

		.legal-content h1 {
			font-size: 2rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}
	}
</style>
