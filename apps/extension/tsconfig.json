{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@chatrat/types": ["../../packages/types/src/index"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"]
}
