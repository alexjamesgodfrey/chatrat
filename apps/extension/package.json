{
  "name": "chatrat",
  "displayName": "Chatrat: expose code in real time via MCP",
  "description": "Indexes repository files and stores them in AgentDB for MCP server integration",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjamesgodfrey/chatrat.git"
  },
  "license": "MIT",
  "author": {
    "name": "ServietteLLC"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "publisher": "ServietteLLC",
  "version": "0.5.2",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Chatrat: Repository Context Capture",
      "properties": {
        "chatrat.agentDbToken": {
          "type": "string",
          "default": "",
          "description": "AgentDB UUID token for database access"
        },
        "chatrat.agentDbApiKey": {
          "type": "string",
          "default": "",
          "description": "AgentDB API key for authentication"
        },
        "chatrat.databaseName": {
          "type": "string",
          "default": "repository-context",
          "description": "Database name to store repository data"
        },
        "chatrat.templateName": {
          "type": "string",
          "default": "repo-context-template",
          "description": "Template name to use when creating the per-user database."
        },
        "chatrat.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/*.log",
            "**/.env*",
            "**/.vscode/**",
            "**/out/**"
          ],
          "description": "File patterns to exclude from capture"
        },
        "chatrat.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes (default: 1MB)"
        },
        "chatrat.autoCapture": {
          "type": "boolean",
          "default": false,
          "description": "Automatically capture and send data when opening a repository"
        },
        "chatrat.serverBaseUrl": {
          "type": "string",
          "default": "https://api.chatrat.cat",
          "description": "Base URL of the authentication and proxy server"
        }
      }
    },
    "views": {
      "chatrat-container": [
        {
          "type": "webview",
          "id": "chatrat.sidebar",
          "name": "Chatrat",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Chatrat"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chatrat-container",
          "title": "Chatrat",
          "icon": "icons/chatrat.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "chatrat.showSidebar",
        "title": "Chatrat: Show Sidebar"
      },
      {
        "command": "chatrat.captureAndSend",
        "title": "Chatrat: Index Repository"
      },
      {
        "command": "chatrat.listStoredRepositories",
        "title": "Chatrat: List Indexed Repositories"
      },
      {
        "command": "chatrat.clearDatabase",
        "title": "Chatrat: Delete All Data"
      },
      {
        "command": "chatrat.getMcpUrl",
        "title": "Chatrat: Get MCP URL"
      },
      {
        "command": "chatrat.authenticate",
        "title": "Chatrat: Authenticate with GitHub"
      },
      {
        "command": "chatrat.logout",
        "title": "Chatrat: Logout from GitHub"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.25.9",
    "typescript": "^4.9.4",
    "@chatrat/types": "workspace:*"
  },
  "dependencies": {
    "@agentdb/sdk": "^1.1.8",
    "axios": "^1.7.9",
    "ignore": "^5.2.4"
  }
}
